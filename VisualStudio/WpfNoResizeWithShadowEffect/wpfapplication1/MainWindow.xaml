<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="Transparent"  Style="{StaticResource for_noresize_window}" MouseDown="Window_MouseDown">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="NoResizeWithShadowEffect" Foreground="Olive"/>
            <TextBlock Text=""/>
            <Button Padding="20,5" Content="Close Window" Click="Clicked"/>
            <x:Code>
                <![CDATA[                 void Clicked(object sender, RoutedEventArgs e)                 {                     this.Close();                 }                 ]]>
            </x:Code>
        </StackPanel>
    </Grid>
</Window>
